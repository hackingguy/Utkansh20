<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/otp_verification"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:onClick="nothing"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/verifynum"
        android:gravity="center"
        android:text="We have sent a 6-digit OTP"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:paddingStart="25dp"
        android:textColor="@android:color/black" />
    <!---<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="___  ___  ___  ___"
        android:fontFamily="@font/verifynum"
        android:layout_gravity="center"
        /> By Akash Chhabra-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/onePass"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/verifynum"
            android:gravity="center"
            android:hint="•"
            android:inputType="number"
            android:maxLength="1" />

        <EditText
            android:id="@+id/twoPass"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/verifynum"
            android:gravity="center"
            android:hint="•"
            android:inputType="number"
            android:maxLength="1" />

        <EditText
            android:id="@+id/threePass"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/verifynum"
            android:gravity="center"
            android:hint="•"
            android:inputType="number"
            android:maxLength="1" />

        <EditText
            android:id="@+id/fourPass"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/verifynum"
            android:gravity="center"
            android:hint="•"
            android:inputType="number"
            android:maxLength="1" />

        <EditText
            android:id="@+id/fivePass"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/verifynum"
            android:gravity="center"
            android:hint="•"
            android:inputType="number"
            android:maxLength="1" />

        <EditText
            android:id="@+id/sixPass"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/verifynum"
            android:gravity="center"
            android:hint="•"
            android:inputType="number"
            android:maxLength="1" />

    </LinearLayout>

</LinearLayout>